// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Playlist {
  id                    String                  @id @default(uuid())
  spotifyId             String                  @unique @default(uuid())
  name                  String
  followers             Int
  PlaylistTrackPosition PlaylistTrackPosition[]
}

model Artist {
  id        String  @id @default(uuid())
  spotifyId String  @unique
  name      String  @unique
  tracks    Track[]

  @@index(fields: [spotifyId])
}

model Track {
  id                    String                  @id @default(uuid())
  spotifyId             String                  @unique
  name                  String
  artists               Artist[]
  PlaylistTrackPosition PlaylistTrackPosition[]
}

model PlaylistTrackPosition {
  playlist   Playlist @relation(fields: [playlistId], references: [id])
  playlistId String
  track      Track    @relation(fields: [trackId], references: [id])
  trackId    String
  date       DateTime
  position   Int

  @@unique([trackId, playlistId, date])
}
