generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Playlist {
  id        Int     @id @default(autoincrement())
  name      String?
  followers Int
}

model Artist {
  id        String  @id @default(uuid())
  spotifyId String  @unique
  name      String  @unique
  tracks    Track[]

  @@index(fields: [spotifyId])
}

model Track {
  id        String   @id @default(uuid())
  spotifyId String   @unique
  name      String
  artists   Artist[]
}

model PlaylistTrackPosition {
  id         String   @id @default(uuid())
  playlistId Int
  trackId    Int
  date       DateTime
  position   Int
}
